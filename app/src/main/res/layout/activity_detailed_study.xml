<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <TextView
        android:id="@+id/study_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Name"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"/>

    <TextView
        android:id="@+id/study_detail_link_course"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Link course"
        app:layout_constraintTop_toBottomOf="@id/study_detail_name"
        app:layout_constraintStart_toStartOf="@id/study_detail_name"
        app:layout_constraintEnd_toEndOf="@id/study_detail_name"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/study_detail_category"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Category"
        app:layout_constraintTop_toBottomOf="@id/study_detail_link_course"
        app:layout_constraintStart_toStartOf="@id/study_detail_name"
        app:layout_constraintEnd_toEndOf="@id/study_detail_name"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/study_detail_position"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Position"
        app:layout_constraintTop_toBottomOf="@id/study_detail_category"
        app:layout_constraintStart_toStartOf="@id/study_detail_name"
        app:layout_constraintEnd_toEndOf="@id/study_detail_name"
        android:layout_marginVertical="5dp"/>

    <TextView
        android:id="@+id/study_detail_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Status"
        app:layout_constraintTop_toBottomOf="@id/study_detail_position"
        app:layout_constraintStart_toStartOf="@id/study_detail_name"
        app:layout_constraintEnd_toEndOf="@id/study_detail_name"
        android:layout_marginVertical="5dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>