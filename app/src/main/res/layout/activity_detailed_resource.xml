        app:layout_constraintEnd_toEndOf="@id/task_detail_subject"
        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/task_detail_deadline"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Deadline"
        app:layout_constraintTop_toBottomOf="@id/task_detail_priority"
        app:layout_constraintStart_toStartOf="@id/task_detail_subject"
        app:layout_constraintEnd_toEndOf="@id/task_detail_subject"
        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/task_detail_due_date"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Due date"
        app:layout_constraintTop_toBottomOf="@id/task_detail_deadline"
        app:layout_constraintStart_toStartOf="@id/task_detail_subject"
        app:layout_constraintEnd_toEndOf="@id/task_detail_subject"
        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

</androidx.constraintlayout.widget.ConstraintLayout>