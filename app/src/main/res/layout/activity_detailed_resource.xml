        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/study_detail_status"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Status"
        app:layout_constraintTop_toBottomOf="@id/study_detail_position"
        app:layout_constraintStart_toStartOf="@id/study_detail_name"
        app:layout_constraintEnd_toEndOf="@id/study_detail_name"
        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

    <!--                               DETAIL TASK                                        -->

    <TextView
        android:id="@+id/task_detail_subject"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Subject"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_margin="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/task_detail_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Name"
        app:layout_constraintTop_toBottomOf="@id/task_detail_subject"
        app:layout_constraintStart_toStartOf="@id/task_detail_subject"
        app:layout_constraintEnd_toEndOf="@id/task_detail_subject"
        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/task_detail_description"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        tools:text="Description"
        app:layout_constraintTop_toBottomOf="@id/task_detail_name"
        app:layout_constraintStart_toStartOf="@id/task_detail_subject"
        app:layout_constraintEnd_toEndOf="@id/task_detail_subject"
        android:layout_marginVertical="5dp"
        android:visibility="gone"/>

    <TextView
        android:id="@+id/task_detail_status"
        android:layout_width="0dp"
